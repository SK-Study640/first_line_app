<div class="container">
    <h1>確認</h1>
    <div class="user-info">
        <span class="user-image">
            <%= image_tag("#{@user.tmp_profile_file_path}") %>
        </span>
        <span class="user-name">
            <%= @user.name%>
        </span>
    </div>
<div class="user-input">
  <p>生年月日</p>
  <span><%= @year %>年</span>
  <span><%= @month %>月</span>
  <span><%= @day %>日</span>
</div>

<%= form_with url: registrations_path, method: :post do |form| %>
  <%= hidden_field_tag :name, @user.name %>
  <%= form.hidden_field :line_user_id, value: @user.line_user_id %>
  <%= form.hidden_field :provider, value: @user.provider %>
  <%= hidden_field_tag :year, @year %>
  <%= hidden_field_tag :month, @month %>
  <%= hidden_field_tag :day, @day %>
  <%= hidden_field_tag :tmp_profile_file_path, @user.tmp_profile_file_path %>
  <%= submit_tag "登録", class: "btn-confirm" %>
<% end %>

</div>